<!DOCTYPE ejs>
<html>
  <head>
    <title>Sportify</title>
    <link
      rel="stylesheet"
      type="text/css"
      href="../css/ShoppingCart.css"
    />
  </head>

  <body>
    <div class="header">
      <div class="logo">
        <a href="./Mainpage.html">
          <img
            src="../Images/logo_transparent2.png"
            alt="Sportify Logo"
          />
        </a>
      </div>
      <div class="search-bar">
        <input type="text" placeholder="Search items" />
        <button class="register-button">
          <a href="#register">
            <img src="../Images/user2.png" alt="Register Icon" />
            <div class="menu">
              <ul>
                <li>
                  <a class="login-join" ;href="http://localhost:70/login">Login</a><span>+ </span
                  ><a class="login-join" ;href="">Join</a>
                </li>
                <li>
                  <a class="accord" ;href="#my-account">
                    <img
                      src="../Images/user.png"
                      alt="My Account Icon"
                    />
                    <span class="account">My Account</span></a
                  >
                </li>
                <li>
                  <a class="accord" ;href="#my-orders">
                    <img
                      src="../Images/checkout.png"
                      alt="My Orders Icon"
                    />
                    <span class="orders">My Orders</span></a
                  >
                </li>
              </ul>
            </div>
          </a>
        </button>
        <button class="like-button">
          <a href="#liked-items">
            <img src="../Images/heart.png" alt="Register Icon" />
          </a>
        </button>
        <button class="bag-button">
          <a href="#bag">
            <img src="../Images/bag.png" alt="Register Icon" />
          </a>
        </button>
      </div>
    </div>

    <div class="bag-header">
      <h2>Shopping Cart</h2>
    </div>

    <div class="content">
      <table id="cart-table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- New products -->
        </tbody>
      </table>
    </div>
    <div class="checkout-section">
      <div class="total-row">
        <span>Total:</span>
        <span id="total-amount">0.00â‚ª</span>
      </div>
      <div class="checkout-button">
        <button>Sheckout</button>
      </div>
    </div>
    <div class="footer">
      <h3>Follow us</h3>
      <button class="instagram-button">
        <a href="#instagram">
          <img src="../Images/instagram.png" alt="instegram Icon" />
        </a>
      </button>
      <button class="facebook-button">
        <a href="#facebook">
          <img src="../Images/facebook.png" alt="facebook Icon" />
        </a>
      </button>
      <h3>Location</h3>
      <button class="location-button">
        <a href="#location">
          <img src="../Images/pin.png" alt="location Icon" />
        </a>
      </button>
      <h3>Management</h3>
      <button class="management-button">
        <a href="#management">
          <img src="../Images/secure.png" alt="management Icon" />
        </a>
      </button>
    </div>
  </body>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="../js/ShoppingCart.js"></script>
</html>
