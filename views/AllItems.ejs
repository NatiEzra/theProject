<!DOCTYPE ejs>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="../css/Men.css" />
    <link rel="stylesheet" type="text/css" href="../css/allitem.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%- include('./templates/header.ejs');%>
    <div class="title">
      <h2>All items</h2>
    </div>
    <%- include('./templates/dropDown.ejs');%>

  
   
    <div class="col-md-3">
        <div class="table-container d-flex align-items-center">
            <div class="mr-3">
                <label for="price">Price:</label>
                <select class="form-control" id="price">
                    <option value="">Select</option>
                    <option value="100">Under 100₪</option>
                    <option value="300">Under 200₪</option>
                    <option value="400">Under 300₪</option>
                    <option value="500">Under 400₪</option>
                </select>
            </div>
            <div class="mr-3">
                <label for="size">gender:</label>
                <select class="form-control" id="gender">
    <option value="">Select</option>
    <option value="male">male</option>
    <option value="female">female</option>
</select>

            </div>
            <div>
                <label for="type">Type:</label>
                <select class="form-control" id="type">
                    <option value="">Select</option>
                    <option value="shirts">Shirts</option>
                    <option value="pants">Pants</option>
                    <option value="shoes">Shoes</option>
                </select>

            </div>
            <button id="apply-filter-btn" class="btn btn-primary ml-3" disabled>Apply</button>
            <button id="clear-filter-btn" class="btn btn-secondary ml-2">Clear Filters</button>
        </div>
    </div>


   <div class="cont">
    <input type="text" id="search-input" placeholder="Search items...">
    <button id="search-button">Search</button>

    <div id="sort-options" class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="sort-options-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Sort Order
      </button>
      <div class="dropdown-menu" aria-labelledby="sort-options-dropdown">
          <a class="dropdown-item" href="#" data-sort="low-high">Low to High</a>
          <a class="dropdown-item" href="#" data-sort="high-low">High to Low</a>
      </div>
  </div>
</div>
    
    
    <div id="container"></div> 
    
    <%- include('./templates/footer.ejs');%>

</body>
<script type="text/JavaScript" src="../js/items.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</html>