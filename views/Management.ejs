<!DOCTYPE ejs>
<html>
<head>
  <title>Sportify || Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
  <link rel="stylesheet" type="text/css" href="../css/ourStores.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous">

  <style>
    .page-title {
      text-align: center;
    }
    body{
      background-color: rgb(0, 0, 0, 0.2)
    }
    .navbar-nav .nav-link {
      text-align: center;
      font-size: 18px;
      transition: font-size 0.2s;
    }

    .navbar-nav .nav-link:hover {
      font-size: 20px;
    }

    .navbar-nav .nav-item {
      margin-right: 10px;
    }

    .form-container {
      margin-top: 20px;
      display: none; /* Hide the form by default */
    }
  </style>
</head>
<body>
  <%- include('./templates/header.ejs'); %>
  <div>
    <h2 class="page-title">
      Management
    </h2>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="#" onclick="toggleForm()">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Layouts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Account Settings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" target="_blank">Login</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container form-container" id="formContainer">
    <form action="/management"  method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="type">Type</label>
        <input type="text" class="form-control" id="type" name="type" required>
      </div>
      <div class="form-group">
        <label for="gender">Gender</label>
        <select class="form-control" id="gender" name="gender" required>
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>

        </select>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" name="price" required>
      </div>
      <div class="form-group">
        <label for="details">Details</label>
        <textarea class="form-control" id="details" name="details" required></textarea>
      </div>
      <div class="form-group">
        <label for="img">Upload Single Images Here</label>
        <div class="mb-3">
          <input type="file" name="single_input" class="form-control" >
        </div>
      </div>
     
      <button type="submit" class="btn btn-primary">Add Item</button>
    </form>
  </div>

  <%- include('./templates/footer.ejs'); %>
  <script>
    function toggleForm() {
      var formContainer = document.getElementById("formContainer");
      if (formContainer.style.display === "none") {
        formContainer.style.display = "block";
      } else {
        formContainer.style.display = "none";
      }
    }
  </script>
</body>
</html>
