<!DOCTYPE ejs>
<html>
<head>
  <title>Sportify || Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
  <link rel="stylesheet" type="text/css" href="../css/admin.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <%- include('./templates/header.ejs'); %>
  <div>
    <h2 class="page-title">
      Management
    </h2>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a id="AddItem" class="nav-link">Add item</a>
        </li>
        <li class="nav-item">
          <a id="manageUsers" class="nav-link">Manage Users</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Account Settings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" target="_blank">Login</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="form-container-hidden" id="formContainer">
    <form action="/management" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="input-text form-control" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="type">Type</label>
        <select class="input-text form-control" id="type" name="type" required>
          <option value="Men">Men</option>
          <option value="Women">Women</option>
          <option value="Unisex">Unisex</option>
        </select>
      </div>
      <div class="form-group">
        <label for="gender">Gender</label>
        <select class="input-text form-control" id="gender_" name="gender" required>
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="input-text form-control" id="price" name="price" required>
      </div>
      <div class="form-group">
        <label for="details">Details</label>
        <textarea class="input-textarea form-control" id="details" name="details" required></textarea>
      </div>
      <div class="form-group">
        <label for="img">Upload Single Images Here</label>
        <div class="mb-3">
          <input type="file" name="single_input" class="input-text form-control">
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Add Item</button>
    </form>
  </div>

  <div class="form-container-hidden" id="formContainer">
